#include <iostream>
#include <string>
using namespace std;

class vector 
{
	int *arr;
	int n;
public:
	vector() 
	{
		arr = new int[0];
		n = 0;
	}
	vector(int s) 
	{
		arr = new int[s];
		n = s;
	}
	int size() 
	{
		return n;
	}
	bool empty() 
	{
		if (n == 0)
			return true;
		else
			return false;
	}
	void push_back(int a) 
	{
		int *temp = new int[n + 1];
		for (int i = 0; i < n; i++)
			temp[i] = arr[i];
		temp[n] = a;
		delete[] arr;
		arr = temp;
		n++;
	}
	int &operator[](int i) {
		return arr[i];
	}
	void resize(int s) 
	{
		int *temp = new int[s];
		delete[] arr;
		arr = temp;
		n = s;
	}
	int get(int i) 
	{
		return arr[i];
	}
	void set(int i, int a)
	{
		arr[i] = a;
	}
	vector &operator=(vector &A) 
	{
		int s = A.n;
		int *temp = new int[s];
		for (int i = 0; i < s; i++)
			temp[i] = A[i];
		delete[] arr;
		arr = temp;
	}
	void print(string s = "") {
		for (int i = 0; i < n; i++)
			cout << arr[i] << s;
	}
	~vector() 
	{
		delete[] arr;
		n = NULL;
	}
};

int main() 
{
	vector A(10);
	A.print(" ");
	cout << endl;
	A.set(2, 1);
	A.resize(4);
	A.push_back(17);
	A.print(" ");
	system("pause");
	return 0;
}
